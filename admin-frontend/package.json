{
  "name": "sarkari-admin-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --max-warnings=0",
    "guard:ui": "node ../scripts/admin-ui-guard.mjs",
    "generate:api": "openapi-typescript ../openapi.json -o src/types/api.generated.ts",
    "test:e2e:ci": "playwright test --config playwright.config.ts",
    "test:e2e:nightly:smoke": "playwright test --config playwright.config.ts",
    "test:e2e:integration": "playwright test --config playwright.integration.config.ts tests/admin.integration.spec.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.13",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^17.0.0",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.1"
  }
}
